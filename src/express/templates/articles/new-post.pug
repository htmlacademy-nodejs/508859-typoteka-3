extends ../layout.pug

block content
  main
    section
      .popup.popup--new-publication.popup--anti
        .new-publication
          form(action='/articles/add', method='POST', enctype='multipart/form-data')
            .new-publication__header
              h1 Новая публикация
              .new-publication__date-form
                h3 Дата публикации
                .new-publication__date-form-division
                  .new-publication__date-block
                    label(for='new-publication-date', aria-label='Календарь')
                    input#new-publication-date(type='text', name='createdDate', placeholder=article.createdAt value=article.createdDate)
              button.new-publication__button.button.button--colored(type='submit') Опубликовать
            a.popup__button.button.button--popup-close(href='/', aria-label='Закрыть окно')
              | Закрыть
              | окно
            .new-publication__form.form
              .form__wrapper.form__wrapper--intro
                .form__field
                  label
                    input(type='text', placeholder='Заголовок', name='title', value=article.title, required='')
                .form__field.form__field--post-image
                  label
                    input#image-name-field(type='text', placeholder='Фотография', name='img', value=article.imagePath, readonly='')
                  .form__image-loader.form__image-loader--publication
                    label
                      input.visually-hidden(type='file', name='photo')
                      | Обзор
                  if isEdit
                    button.button.button--transparent
                      | Удалить
                each category in article.categories
                  .new-publication__checkbox.new-publication__checkbox--auto
                    input(type='checkbox', name='checkbox-auto', id='checkbox-auto')
                    label(for='checkbox-auto')=category.name
                .new-publication__category-wrapper
                  a.new-publication__form-link.button.button--transparent(href='#') Добавить категорию
              .form__wrapper.form__wrapper--text
                .form__field.form__field--publication-text
                  label
                    textarea(rows='5', name='announce', placeholder='Анонс публикации')=article.announce
                .form__field.form__field--publication-text
                  label
                    textarea(rows='10', name='fullText', placeholder='Полный текст публикации')=article.fullText
