ul.preview__list
  each article in articles
    li.preview__item(class=!article.imagePath ? 'preview__item--noimage' : '')
      ul.preview__breadcrumbs
        each category in article.categories
          li.preview__breadcrumbs-item
            a.preview__breadcrumbs-link(href='/articles/categories/' + category.id)=category.name
      if article.imagePath
        .preview__background
          img.preview__background-image(src=article.imagePath, srcset=article.imagePath, width='460', height='240', alt=article.title)
      time.preview__time(datetime=article.createdAt)=article.createdDate
      h3.preview__name
        a.preview__name-link(href=`/articles/${article.id}`)=article.title
      p.preview__text=article.announce
      a.preview__comment(href=`/articles/${article.id}#comments`)
        | Комментарии
        span.preview__cloud
        | &nbsp;
        b.preview__comment-count=article.comments.length
